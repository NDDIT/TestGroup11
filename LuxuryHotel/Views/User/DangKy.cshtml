
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account</title>
    <link href="~/Content/Content/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" crossorigin="anonymous" />
</head>
<body>
    <!-- Form without bootstrap -->
    <div class="auth-wrapper">
        <div class="auth-container">
            <div class="auth-action-left">
                <div class="auth-form-outer">
                    <form>
                        <h2 class="auth-form-title">
                            Create Account
                        </h2>

                        @using (Html.BeginForm("DangKy", "User", FormMethod.Post, new { @class = "login-form" }))
                        {
                            <input type="text" class="auth-form-input" placeholder="Full Name" name="FullName" required>

                            <input type="text" class="auth-form-input" placeholder="User" name="User" required>

                            <input type="email" class="auth-form-input" placeholder="Email" name="Email" required>

                            <input type="tel" class="auth-form-input" placeholder="Phone Number" name="PhoneNumber" required>

                            <div class="input-icon">
                                <input type="password" class="auth-form-input" placeholder="Password" name="Password" required>
                            </div>

                            <input type="password" class="auth-form-input" placeholder="Confirm Password" name="ConfirmPass" required>

                         

                            <div class="footer-action">
                                <input type="submit" value="Sign Up" class="auth-submit">
                                <a href="@Url.Action("DangNhap", "User")" class="auth-btn-direct">Sign In</a>
                            </div>
                        }
                    </form>
                </div>
            </div>
            <div class="auth-action-right">
                <div class="auth-image">
                       <img src="~/Content/images/vector.jpg" alt="login" />
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/common.js"></script>
</body>
</html>
